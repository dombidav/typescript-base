{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": ["error", "never"]
  },
  "env": {
    "browser": true,
    "es2021": true
  }
}
